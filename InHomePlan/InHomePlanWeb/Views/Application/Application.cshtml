@using Microsoft.AspNetCore.Mvc.TagHelpers

@model Application

@{
    ViewData["Title"] = "Application1 Page";
}
<link rel="stylesheet" href="~/css/application.css" asp-append-version="true" />


<br>
<br><br>
<br>
<br>
<br>
<form id="Application" class="form" asp-route-returnUrl="" method="post">
    <h1 class="text-center">Application</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Progress bar -->
    <div class="progressbar">
        <div class="progress" id="progress"></div>

        <div class="progress-step progress-step-active" data-title="Personal"></div>
        <div class="progress-step" data-title="House Info"></div>
        <div class="progress-step" data-title="Plan Upload"></div>
        <div class="progress-step" data-title="Payment"></div>
    </div>

    <!-- Steps -->
    <!--first part-->
    <div class="form-step form-step-active">
        <div class="row">
            <div class="col">
                <div class="input-group">
                    @*<input asp-for="Input.FirstName" class="form-control" autocomplete="fistname" aria-required="true" />*@
                    <label for="FirstName">First Name</label>
                   @* <span asp-validation-for="Input.FirstName" class="text-danger"></span>*@
                    
                    <input type="text" name="FirstName" id="firstName" />
                </div>
            </div>
            @*<div class="col">
                <div class="input-group">
                    @Html.LabelFor(model => model.LastName)
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "label", id = "lastName" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>

            </div>*@

            <div class="col">
                <div class="input-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" name="LastName" id="lastName" />
                </div>
            </div>
        </div>

        <div class="input-group">
            <label for="Address">Address</label>
            <input type="text" name="Address" id="address" />
        </div>

        <div class="row">
            <div class="col">
                <div class="input-group">
                    <label for="Phone">Phone</label>
                    <input type="text" name="Phone" id="phone" />
                </div>
            </div>
            <div class="col">
                <div class="input-group">
                    <label for="ID">NIC</label>
                    <input type="number" name="NIC" id="ID" />
                </div>
            </div>
        </div>

       <div class="input-group">
            <label for="email">Email</label>
            <input type="text" name="Email" id="email" />
        </div>

        <div class="input-group">
            <label for="dob">DateOfBirth</label>
            <input type="date" name="DateOfBirth" id="dob" />
        </div>

        <div class="">
            <a href="#" class="btn btn-next width-50 ml-auto">Next</a>
        </div>
    </div>

    <!--second part -->
   
    <div class="form-step">

        <div class="row">
            <div class="col">
                <div class="input-group">
                    <label for="AssessmentNo">Assessment No.</label>
                    <input type="text" name="AssessmentNo" id="assessment" />
                </div>
            </div>
            <div class="col">
                <div class="input-group">
                    <label for="PostalCode">Postal Zone</label>
                    <input type="text" name="PostalCode" id="postal" />
                </div>
            </div>
        </div>

        <div class="input-group">
            <label for="StreetName">Street Name</label>
            <input type="text" name="StreetName" id="street" />
        </div>

         <div class="row">
            <div class="col">
                <div class="input-group">
                    <label for="No_Of_Rooms">No. of rooms</label>
                    <input type="text" name="No_Of_Rooms" id="rooms" />
                </div>
            </div>
            <div class="col">
                <div class="input-group">
                    <label for="No_of_perches">No. of perches</label>
                    <input type="text" name="No_of_perches" id="perches" />
                </div>
            </div>
        </div>

        <div class="input-group">
            <label for="BuildingArea">Building Area</label>
            <input type="text" name="BuildingArea" id="area" />
        </div>

        <div class="btns-group">
            <a href="#" class="btn btn-prev">Previous</a>
            <a href="#" class="btn btn-next">Next</a>
        </div>

        </div>

       

    <!--third part-->
    <div class="form-step">
        <div class="input-group">
            <label for="PlanNo">Plan No.</label>
            <input type="text" name="PlanNo" id="planNo" />
        </div>

        <div class="input-group">
            <label for="file1">Upload House Plan</label>
            <input type="file" name="file1" id="file1" accept="image/*, .pdf" />
       </div>
        <div class="input-group">
            <label for="file2">Upload Land Plan</label>
            <input type="file" name="file2" id="file2" accept="image/*, .pdf" />
        </div>

       
        <div class="btns-group">
            <a href="#" class="btn btn-prev">Previous</a>
            <a href="#" class="btn btn-next">Next</a>
        </div>
    </div>

    <!--fourth part-->
    <div class="form-step">
        
        <div class="btns-group">
            <a href="#" class="btn btn-prev">Previous</a>
            @*<input type="submit" value="Submit" class="btn" />*@

            <button type="submit" class="btn" >Submit</button>
        </div>
    </div>
</form>

<script src="~/js/application.js" asp-append-version="true"></script>

