   <body>
      <header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-5 fixed-top">
            <div class="container-fluid">
               <img src="~/images/logo.png" alt="InHome Plan Logo" class="logo">
                @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                  aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
               </button>*@
               
               <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                  <ul class="navbar-nav ml-auto">
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="HomeOwner" asp-controller="Home" asp-action="Index">Home</a>
                     </li>
                     @if (User.IsInRole(SD.Role_Houseowner))
                     {
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="HomeOwner" asp-controller="Services" asp-action="Services">Services</a>
                     </li>
                     }
                     @if (User.IsInRole(SD.Role_Houseowner))
                     {
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="HomeOwner" asp-controller="Application" asp-action="PaymentConfirmation">My Applications</a>
                     </li>
                     }
                     @if (User.IsInRole(SD.Role_Staff))
                     {
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Staff" asp-controller="Application" asp-action="ApplicationDisplay">Applications</a>
                     </li>
                     }
                        @if (!User.IsInRole(SD.Role_Staff))
                     {
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="HomeOwner" asp-controller="Home" asp-action="Contactus">Contact Us</a>
                     </li>
                     }
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="HomeOwner" asp-controller="Home" asp-action="About">About</a>
                     </li>
   
                     <partial name="_LoginPartial" />

                     @*<li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Services" asp-action="Services">Profile</a>
                     </li>*@
                  </ul>
               </div>
            </div>
         </nav>
      </header>
      <div class="container">
         <main role="main" class="pb-3">
            @RenderBody()
         </main>
      </div>

