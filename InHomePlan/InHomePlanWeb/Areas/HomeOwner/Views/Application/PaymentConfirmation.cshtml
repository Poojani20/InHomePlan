<link rel="stylesheet" href="~/css/payment_confirmation.css" asp-append-version="true" />

@{
    ViewData["Title"] = "My Applications";
}

@model IEnumerable<Application>

<div class="card shadow border-0 ">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">My Applications</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                    <tr>
                    <th>Application ID</th>
                    <th>Address</th>
                    <th>Submitted Time</th>
                    <th>Payment Status</th>
                    <th>Application Status</th>
                </tr>
                </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.ApplicationID</td>
                        <td width="20%">@obj.Address</td>
                        <td width="20%">@obj.Payment.PaymentDate</td>
                        <td width="20%">@obj.Payment.PaymentStatus</td>
                        <td width="20%">@obj.ApplicationStatus</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a  asp-area="HomeOwner" asp-controller="Application" asp-action="ApplicationDetails" asp-route-applicationID="@obj.ApplicationID"
                                class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>View Application</a>
                                @*<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ApplicationID"
                                class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>*@
					        </div>
				        </td>
			        </tr>
                }
            </tbody>
        </table>
    </div>
</div>


