@{
    ViewData["Title"] = "Contactus Page";
}
<link rel="stylesheet" href="~/css/contactus.css" asp-append-version="true" />

<div class="container2 ">
    <div class="container">
        <h1>Connect With Us</h1>
        <h5><p>We would love to repsond to your queries and help you. <br>Feel free to get in touch with us.</p></h5>
        <div class="contact-box">
            <div class="contact-left">
                <h2>Send your messsage</h2><br>
                <form>
                    <div class="input-row">
                        <div class="input-group">
                            <h5>Name</h5>
                            <input type="text" placeholder="Poojani Ranasinghe">

                        </div>
                        <div class="input-group">
                            <h5>Phone</h5>
                            <input type="text" placeholder="+94 775191968">

                        </div>
                    </div>

                    <div class="input-row">
                        <div class="input-group">
                            <h5>E-mail</h5>
                            <input type="text" placeholder="poojani2000@gmail.com">

                        </div>
                        <div class="input-group">
                            <h5>Subject</h5>
                            <input type="text" placeholder="Description">

                        </div>

                    </div>
                    <h5>Message</h5>
                    <textarea name="" id="message" rows="5" placeholder="Your Message"></textarea>

                    <div class="text-center mt-2">
                        <button class="btn ">Send</button>
                    </div>

                </form>

            </div>
            <div class="contact-right">
                <h3>Reach Us</h3>
                <table>
                    <tr>
                        <td>Email</td>
                        <td>inhomeplan@gov.lk</td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>+94 755425394</td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td>No.85/c,<br>Colombo9</td>
                    </tr>
                </table>

            </div>


        </div>

    </div>


</div>

