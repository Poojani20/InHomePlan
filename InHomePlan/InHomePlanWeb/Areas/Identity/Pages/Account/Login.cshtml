<section class="vh-95 " style="display: flex; justify-content: center;">
<div class="card shadow border-0 mt-5 mb-5">
    <div class="card-header  bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="py-2 text-white">Login</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post">
                       
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-4 mt-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4 mt-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                                <div class="checkbox mb-4 mt-4">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                           @* <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>*@
                                <button id="login-submit" type="submit" class="button">Log in</button>
                        </div>
                        <div class="d-flex justify-content-between pt-2 mb-4 mt-2">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                           @* <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-12">
                <section>
                    @*<div class="d-flex justify-content-center">
                        <h4 class="text-center divider-text pt-3">Or</h4>
                    </div>
                    
                    <p class="text-center divider-text d-flex pt-3 ">Or</p>
                    <h4 class="text-center">Use another service to log in.</h4>*@

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
        </div>
        </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
