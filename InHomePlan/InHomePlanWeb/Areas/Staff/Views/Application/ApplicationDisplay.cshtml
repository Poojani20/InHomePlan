@using Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Application>

@{
    ViewData["Title"] = "Application1 Page";
}
<link rel="stylesheet" href="~/css/application.css" asp-append-version="true" />

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Application List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                    <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>NIC</th>
                    <th>Email</th>
                    <th>DateOfBirth</th>
                </tr>
                </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.ApplicationID</td>
                        <td width="30%">@obj.FirstName</td>
                        <td width="30%">@obj.LastName</td>
                        <td width="30%">@obj.Address</td>
                        <td width="30%">@obj.Phone</td>
                        <td width="30%">@obj.NIC</td>
                        <td width="30%">@obj.Email</td>
                        <td width="30%">@obj.DateOfBirth</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Application" asp-action="ApplicationDetails" asp-route-applicationID="@obj.ApplicationID"
                                class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> View Details</a>
					        </div>
				        </td>
			        </tr>
                }
            </tbody>
        </table>
    </div>
</div>


